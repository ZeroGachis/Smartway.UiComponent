<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smartway.UiComponent.Layouts.ClickableItem"
             x:Name="Self">
    <ContentView.Content>
        <RelativeLayout>
            <BoxView WidthRequest="{Binding Source={x:Reference Self}, Path=BoxWidth}"
                     HeightRequest="{Binding Source={x:Reference Self}, Path= BoxHeight}"/>
                <ContentView
                    Content="{Binding Source={x:Reference Self}, Path=LayoutContent}">
                </ContentView>
        </RelativeLayout>
    </ContentView.Content>
</ContentView>
