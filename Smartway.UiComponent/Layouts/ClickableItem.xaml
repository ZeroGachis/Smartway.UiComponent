<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smartway.UiComponent.Layouts.ClickableItem"
             x:Name="Self">
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding Source={x:Reference Self}, Path=TapCommand }" />
    </ContentView.GestureRecognizers>
    <ContentView.Content>
        <Frame WidthRequest="{Binding Source={x:Reference Self}, Path=HitBoxWidth}"
               HeightRequest="{Binding Source={x:Reference Self}, Path= HitBoxHeight}">
            
            <ContentView
                Content="{Binding Source={x:Reference Self}, Path=LayoutContent}">
            </ContentView>
        </Frame>
    </ContentView.Content>
</ContentView>
