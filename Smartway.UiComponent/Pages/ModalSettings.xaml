<?xml version="1.0" encoding="UTF-8"?>
<pages:Modal xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Smartway.UiComponent.Pages;assembly=Smartway.UiComponent"
             x:Class="Smartway.UiComponent.Pages.ModalSettings"
             x:Name="ModalSetting"
             HasDivider="True"
             BodyPadding="20, 20"
             BodyHeight="{Binding Source={x:Reference ModalSetting}, Path=BodyHeight}">
        
    <pages:Modal.NavigationContent>
        <pages:YesNoModalFooter CancelCommand="{Binding Source={x:Reference ModalSetting}, Path=CancelCommand}" />
    </pages:Modal.NavigationContent>
</pages:Modal>