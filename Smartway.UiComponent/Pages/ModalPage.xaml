<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smartway.UiComponent.Pages.ModalPage"
             x:Name="Self"
             BackgroundColor="Black">
    <ContentPage.Content>
        <Frame CornerRadius="15" Margin="16" BackgroundColor="White" Padding="0" VerticalOptions="CenterAndExpand">
            <StackLayout Orientation="Vertical" Spacing="0">
                <ContentView Content="{Binding Source={x:Reference Self}, Path=HeaderContent}" HeightRequest="60"/>
                <ContentView Content="{Binding Source={x:Reference Self}, Path=BodyContent}"  />
                <ContentView Content="{Binding Source={x:Reference Self}, Path=FooterContent}" HeightRequest="82"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>