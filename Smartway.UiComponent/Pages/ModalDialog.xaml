<?xml version="1.0" encoding="utf-8" ?>
<pages:Modal xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Smartway.UiComponent.Pages;assembly=Smartway.UiComponent"
             x:Class="Smartway.UiComponent.Pages.ModalDialog"
             x:Name="ModalDialogg"
             HasDivider="False"
             BodyPadding="20, 5, 20, 15"
             BodyHeight="CenterAndExpand"
             NavigationContent="{Binding Source={x:Reference ModalDialogg}, Path=NavigationContent}">

    <pages:Modal.BodyContent>
        <Label Text="{Binding Source={x:Reference ModalDialogg}, Path=Message}" />
    </pages:Modal.BodyContent>

</pages:Modal>