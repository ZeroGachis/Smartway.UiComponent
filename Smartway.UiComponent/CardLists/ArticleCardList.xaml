<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Smartway.UiComponent.CardLists.ArticleCardList"
             x:Name="List"
             >
    <ContentView.Content>
        <StackLayout Orientation="Vertical"
                     x:Name="ArticleListElements"
                     BindableLayout.ItemsSource="{Binding Source={x:Reference List}, Path=ArticlesList}" 
                     BindableLayout.ItemTemplate="{Binding Source={x:Reference List}, Path=ItemTemplate}"
                     />
  </ContentView.Content>
</ContentView>
